{
  "name": "arion-nexus-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:frontend": "npm run dev --workspace=arion-core",
    "dev:backend": "npm run dev --workspace=nexus-bridge",
    "build:frontend": "npm run build --workspace=arion-core",
    "build:backend": "npm run build --workspace=nexus-bridge",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}